last_send = Time.now.to_i

loop {
    line = get
    if line =~ /1035 please/ and checkmana > 70
        put 'sym mana'
        put 'incant 506'
    end
    if last_send < Time.now.to_i - 90
        fput 'send 90 kaspar' if GameObj.pcs.any? { |pc| pc.noun == 'Kasparaitis' }
        last_send = Time.now.to_i
    end
    sleep 0.1
}
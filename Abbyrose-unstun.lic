GROUP = {
    'Azanoth' => 1,
    'Aranthius' => 1
}
BANDIT_SCRIPT = 'Abbyrose-bandits'

loop {
    unless checkdead
        acting = false
        stunnedfriend = GameObj.pcs.find { |x| GROUP[x.noun] && x.status =~ /stun/i }
        if (checkstunned || stunnedfriend) && mana > 100
            acting = true
            pause_script BANDIT_SCRIPT
            waitcastrt?
            fput 'shout 1040'
            waitcastrt?
            put 'look'
        else
            unpause_script BANDIT_SCRIPT if acting
            acting = false
        end
    end
    sleep 0.25
}
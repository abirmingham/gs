loop do
  if !checkdead && !checkstunned
    stunnedfriend =
      GameObj.pcs.find do |x|
        $AZ_CHARS_SET[x.noun] && x.status =~ /stunned/
      end

    if stunnedfriend && checkmana.to_i > 30
      Spell[108].cast(stunnedfriend)
      waitcastrt?
    end
  end
  sleep 0.25
end
